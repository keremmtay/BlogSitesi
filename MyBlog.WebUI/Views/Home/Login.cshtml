@model LoginViewModel

@{
    ViewBag.Title = "MyBlog - Giriş Sayfası";
}

@* HtmlHelper metodu ile Html.BeginForm() kullanarak form tagini oluşturuyorum. *@
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-5 border">
                <div class="bg-primary p-3 mb-2 rounded-2">
                    <h3>Login</h3>
                </div>
                @Html.ValidationSummary(false)
                <!-- Kullanıcı adı için input -->
                <div class="input-group mb-4">
                    <i class="bi bi-person-circle"></i> &emsp;
                    @Html.TextBoxFor(model => model.UserName, new {@class="form-control", @placeholder="Kullanıcı Adı"})

                </div>

                <!-- Password için input -->
                <div class="input-group mb-4">
                    <i class="bi bi-lock-fill"></i> &emsp;
                    @Html.TextBoxFor(model => model.Password, new {@type = "password", @class="form-control", @placeholder="Şifre"})
                </div>

                <!-- Submit butonu için input -->
                <div class="d-grid gap-2 mb-2 rounded-1">
                    <button type="submit" class="btn btn-danger">Giriş</button>


                </div>

            </div>



        </div>



    </div>
}